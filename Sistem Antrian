							printf("No. Telepon : ");
							scanf("%s",TLtelepon[j]);
							printf("\n\nLanjutkan? <y/n> : ");												
							scanf("%s",&aksi);
							if(aksi=='y'){
								printf("\n\n===========================");
								printf("\n  NOMOR ANTRIAN ANDA : %d ",j);
								printf("\n===========================");								
							}
							printf("\n\n\n\nPress Any Key to continue...");
							while(!kbhit());
							system ("cls");
							break;
						}
						
						case 3 : {
							
							while(bil!=0){
							printf("\n===================================================\n");
							printf("\t\tANTRIAN SAAT INI\n");
