										printf("     -----------------------------------------\n");
										printf("\t%d",k);
										printf("\t\t%s\n",TLnama[k]);
										printf("     -----------------------------------------\n");
									}
									printf("\n\n\n\nPress Any Key to continue...");
									while(!kbhit());
									system ("cls");
									break;
								}
